@page "/user/{id}"

<a href="users" class="btn btn-secondary mb-2"> Back</a>

<h3>User details</h3>


@if(User != null)
{
   
        <input type="hidden" @bind=@User.Id />
        <div class="mb-3">
            <label for="email" class="form-label">Email address</label>
            <input @bind=@User.Email  class="form-control" id="email" required>       
        </div>
        <div class="mb-3">
            <label for="name" class="form-label">Name</label>
            <input @bind=@User.Name type="text" class="form-control" id="name" required>
        </div>
         <div class="mb-3">
            <label for="phone" class="form-label">Phone</label>
            <input @bind=@User.Phone type="text" class="form-control" id="phone">
        </div>
       

    



 <button  @onclick="SaveUser" class="btn btn-primary">Save</button>

}




